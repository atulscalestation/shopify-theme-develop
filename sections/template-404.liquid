<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
    </div>
    <div class="my-4">
        <a href="{{ section.settings.button_url }}" class="px-4 inline py-2 text-medium shadow bg-green-400 hover:bg-green-800 hover:text-white">{{ section.settings.button_label }}</a>
    </div>
</div>

{% schema %}
    {
        "name" : "Template 404",
        "tag" : "section",
        "class": "flex items-center justify-center text-center py-7 h-screen",
        "settings" : [
            {
                "type" : "text",
                "id"   : "title",
                "default" : "404",
                "label"  : "404 Heading Title"
            },
            {
                "type" : "textarea",
                "id"   : "subtext_title",
                "default" : "The Page that you're looking for is not found",
                "label"  : "404 SubText Title"
            },
            {
                "type" : "text",
                "id"   : "button_label",
                "default" : "Back to HomePage",
                "label"  : "Button Label"
            },
            {
                "type" : "url",
                "id"   : "button_url",
                "label"  : "Button Url"
            }
        ]
    }
{% endschema %}
